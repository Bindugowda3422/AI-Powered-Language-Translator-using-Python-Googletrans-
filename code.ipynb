from googletrans import Translator

def main():
    translator = Translator()

    print("=== AI Powered Language Translator ===")
    text = input("Enter text to translate: ")
    target_lang = input("Enter target language code (en, hi, kn, fr, es): ")

    try:
        result = translator.translate(text, dest=target_lang)
        print("\nTranslated Text:", result.text)
    except Exception as e:
        print("\nError:", e)
        print("Please check your internet connection or language code.")

if __name__ == "__main__":
    main()
